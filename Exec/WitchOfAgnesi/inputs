# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 10
max_step = 5

amrex.fpe_trap_invalid = 1

fabarray.mfiter_tile_size = 1024 1024 1024

# PROBLEM SIZE & GEOMETRY
geometry.prob_lo     = 0. 0. 0. 
geometry.prob_hi     = 10. 4. 2.

amr.n_cell           = 256   4   32   # dx=dy=dz=100 m, Straka et al 1993 / Xue et al 2000

geometry.is_periodic = 1 1 0

zlo.type = "SlipWall"
zhi.type = "SlipWall"

# TIME STEP CONTROL
erf.use_native_mri     = 0
integration.type       = RungeKutta
integration.rk.type    = 3
erf.use_fixed_dt       = 0.1

# DIAGNOSTICS & VERBOSITY
erf.sum_interval   = 1       # timesteps between computing mass
erf.v              = 1       # verbosity in ERF.cpp
amr.v              = 1       # verbosity in Amr.cpp

# REFINEMENT / REGRIDDING
amr.max_level       = 0       # maximum level number allowed

# CHECKPOINT FILES
amr.check_file      = chk        # root name of checkpoint file
amr.check_int       = 100      # number of timesteps between checkpoints

# PLOTFILES
amr.plot_file         = plt        # root name of plotfile
amr.plot_int          = 1000       # number of timesteps between plotfiles
amr.plot_vars         = density x_velocity y_velocity z_velocity
amr.derive_plot_vars  = pressure theta pres_hse dens_hse pert_pres pert_dens z_phys detJ

# SOLVER CHOICE
erf.use_gravity = true
erf.use_coriolis = false
erf.use_rayleigh_damping = false
erf.spatial_order = 2
erf.les_type = "None"


# Diffusion coefficient from Straka, K = 75 m^2/s
erf.molec_diff_type = "ConstantAlpha"
erf.rho0_trans = 1.0 # [kg/m^3], used to convert input diffusivities
erf.dynamicViscosity = 0.0 # [kg/(m-s)] ==> nu = 75.0 m^2/s
erf.alpha_T = 0.0 # [m^2/s]

# PROBLEM PARAMETERS (optional)
prob.T_0 = 300.0
prob.U_0 = 1.0
prob.rho_0 = 1.0
